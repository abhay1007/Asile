<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpVerifyActivity">
    <!-- +91 9999999999 -->
    <TextView
        android:id="@+id/mob_number"
        android:layout_width="152dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:gravity="top"
        android:layout_marginTop="80dp"

        android:text="+919876543212"
        android:textAppearance="@style/some_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Enter The OTP -->
    <TextView
        android:id="@+id/enter_the_o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:text="Enter the\nOTP"
        android:textAppearance="@style/enter_the_o"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mob_number" />

    <EditText
        android:id="@+id/Otp_ET"
        android:layout_width="78dp"
        android:layout_height="36dp"
        android:textStyle="bold"
        android:text="1234"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_the_o" />

    <Button
        android:id="@+id/Continue_Btn_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_3"
        android:text="Continue"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Otp_ET" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal|top"
        android:text="00:54"
        android:textAppearance="@style/some_id"
        app:layout_constraintStart_toEndOf="@+id/Continue_Btn_otp"
        app:layout_constraintTop_toBottomOf="@+id/Otp_ET" />

</androidx.constraintlayout.widget.ConstraintLayout>